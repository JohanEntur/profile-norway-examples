<!--
A Route object represents the physical layout of the network, and thus consists only of RoutePoints. In order to connect a Route to stop places, JourneyPattern should be used. It contains a list of TimingPoints and ScheduledStopPoints which are connected to StopPlace objects.

This example shows two route definitions, which consist of following elements:
- route definition as an ordered list of points
- additional route points definition
All objects necesssary to define a route are contained in a single ServiceFrame as it is not possible to define everything inline within route tag. This can however be changed and several ServiceFrame instances used instead.

N.B. RoutePoints do not necessarily match StopPlaces.
-->
<ServiceFrame version="any" id="mynetwork001">
    <Name>My route definitions</Name>
    <routes>
        <Route version="any" id="route:1_5">
            <Name>1 to 5</Name>
            <ShortName>1-5</ShortName>
            <Distance>123456</Distance>
            <PrivateCode>12345</PrivateCode>
            <LineRef ref="UhJDyHxt1NyGdA8CafvhrUksYCzRr"/>
            <DirectionType>inbound</DirectionType>
            <pointsInSequence>
                <PointOnRoute>
                    <RoutePointRef ref="RP_1"/>
                </PointOnRoute>
                <PointOnRoute>
                    <RoutePointRef ref="RP_2"/>
                </PointOnRoute>
                <PointOnRoute>
                    <RoutePointRef ref="RP_3"/>
                </PointOnRoute>
                <PointOnRoute>
                    <RoutePointRef ref="RP_4"/>
                </PointOnRoute>
                <PointOnRoute>
                    <RoutePointRef ref="RP_5"/>
                </PointOnRoute>
            </pointsInSequence>
            <InverseRouteRef ref="route:5_3_1"/>
        </Route>
        <Route version="any" id="route:5_3_1">
            <Name>5 to 1</Name>
            <ShortName>5-1</ShortName>
            <Distance>123456</Distance>
            <PrivateCode>531</PrivateCode>
            <LineRef ref="UhJDyHxt1NyGdA8CafvhrUksYCzRr"/>
            <DirectionType>outbound</DirectionType>
            <pointsInSequence>
                <PointOnRoute>
                    <RoutePointRef ref="RP_5"/>
                </PointOnRoute>
                <PointOnRoute>
                    <RoutePointRef ref="RP_3"/>
                </PointOnRoute>
            </pointsInSequence>
            <InverseRouteRef ref="route:1_5"/>
        </Route>
    </routes>
    <routePoints>
        <RoutePoint version="any" id="RP_1">
            <Name>Route Point 1</Name>
            <BorderCrossing>false</BorderCrossing>
        </RoutePoint>
        <RoutePoint version="any" id="RP_2">
            <Name>Route Point 2</Name>
            <BorderCrossing>false</BorderCrossing>
        </RoutePoint>
        <RoutePoint version="any" id="RP_3">
            <Name>Route Point 3</Name>
            <BorderCrossing>true</BorderCrossing>
        </RoutePoint>
        <RoutePoint version="any" id="RP_4">
            <Name>Route Point 4</Name>
            <BorderCrossing>false</BorderCrossing>
        </RoutePoint>
        <RoutePoint version="any" id="RP_5">
            <Name>Route Point 5</Name>
            <BorderCrossing>false</BorderCrossing>
        </RoutePoint>
    </routePoints>
</ServiceFrame>
